@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using TeknikServisCore.Models.IdentityModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <div style="width:300px;margin-left:110%;position:relative;bottom:15px" class="row">
        <div style="display:inline-block;width:100px">
            <img src="#" alt="avatar"/>
        </div>

        <div style="display: inline-block;margin-left:auto">
            <div style="width:200px">
                <label style="margin-left: 10%;">
                   
                    @user.Name.ToUpper() @user.Surname.ToUpper()

                </label>
            </div>
            <div>
                <a asp-controller="Account" asp-action="LogOut" class="btn btn-danger">Çıkış</a>
                <a asp-controller="Profile" asp-action="EditProfile" class="btn btn-info">Profil</a>
            </div>
        
        </div>
    </div>
}

